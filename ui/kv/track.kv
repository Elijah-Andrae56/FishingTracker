<TrackScreen>:
    name: "track"
    BoxLayout:
        orientation: "vertical"
        spacing: "6dp"
        padding: "6dp"

        # ------------ MAP (fills remaining space) -------------
        MapView:
            id: mapview
            zoom: 14
            size_hint_y: 1

        # ------------ INFO BAR -------------------------------
        BoxLayout:
            size_hint_y: None
            height: "32dp"
            spacing: "8dp"
            Label:
                id: speed_lbl
                text: "Waiting for GPS…"
            #Optional – re‑enable if you keep the wave label
            Label:
                id: wave_lbl
                text: ""
            Button:                        # ← NEW tiny “End” button
                text: "End"
                size_hint_x: None
                width: "60dp"
                on_release: app.end_trip()
        # ------------ ACTION BUTTON ---------------------------
        Button:
            text: "Log Catch"
            size_hint_y: None
            height: "48dp"
            on_release: Factory.LogCatchPopup().open()
